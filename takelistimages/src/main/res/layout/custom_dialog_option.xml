<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="@dimen/baseStyle_spaceMedium">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/baseStyle_spaceMedium"
        android:text="Choose Options"
        android:textColor="@color/baseStyle_primaryText"
        android:textSize="@dimen/baseStyle_textLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/baseStyle_spaceNormal"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/btn_openCamera"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1">

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_ripple" />

            <ImageView
                android:layout_width="@dimen/takeimage_btnImageSize"
                android:layout_height="@dimen/takeimage_btnImageSize"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/takeimage_spaceNormal"
                android:src="@drawable/ic_camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/takeimage_spaceNormal"
                android:text="Camera"
                android:textSize="@dimen/baseStyle_textNormal"
                android:textColor="@color/baseStyle_primaryText" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_openGallery"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1">

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_ripple" />

            <ImageView
                android:layout_width="@dimen/takeimage_btnImageSize"
                android:layout_height="@dimen/takeimage_btnImageSize"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/takeimage_spaceNormal"
                android:src="@drawable/ic_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/takeimage_spaceNormal"
                android:text="Gallery"
                android:textSize="@dimen/baseStyle_textNormal"
                android:textColor="@color/baseStyle_primaryText" />

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>